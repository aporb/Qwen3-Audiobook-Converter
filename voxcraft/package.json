{
  "name": "voxcraft",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "uvicorn backend.main:app --reload --port 8000",
    "dev:web": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "install:all": "cd frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
